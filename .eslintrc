{
    "env": {
        "node": true,
        "mocha": true,
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "plugins": ["promise"],
    "rules": {
        "no-console": "off",
        "prefer-destructuring": "warn",
        "class-methods-use-this": "off",
        "comma-dangle": "off",
        "camelcase": "off",
        "import/prefer-default-export": "off",
        "no-plusplus": "off",
        "eqeqeq": "off",
        "no-param-reassign": "off",
        "no-nested-ternary": "off",
        "import/no-extraneous-dependencies": "off",
        "linebreak-style": "off",
        "import/no-named-as-default-member": "off",
        "radix": "off"
    }
}